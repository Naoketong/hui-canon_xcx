page {
    width: 100%;
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
}

.content {
    width: 100%;
    height: 100%;
    display: flex;
    font-size: 0;
}

.content-left {
    width: 28%;
    height: 100%;
    background-color: #f7f7f7;
    border-right: 3rpx solid #f4f4f4;
}

.car-choose-list {}

.car-choose-item {
    width: 100%;
    height: 88rpx;
    font-size: 24rpx;
    color: #606060;
    text-align: center;
    line-height: 88rpx;
}

.car-choose-item.active {
    background-color: #fff;
}

.content-right {
    width: 72%;
    height: 100%;
    background-color: #f9f9f9;
}

.cartype-list {
    font-size: 0;
}

.cartype-item {
    display: flex;
    width: 100%;
    height: 250rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.cartype-left {
    /* display: flex; */
    justify-content: center;
    align-items: center;
    width: 50%;
    height: 100%;
}

.cartype-img {
    margin-top: 30rpx;
    width: 250rpx;
    height: 194rpx;
}

.cartype-zizhu {
    display: inline-block;
    width: 50%;
    height: 30rpx;
    color: #6c6c6c;
    font-size: 18rpx;
    border: 1rpx solid #6c6c6c;
    /* justify-content: center; */
    line-height: 30rpx;
    border-radius: 10rpx;
    /* align-self: flex-end */
}

.cartype-right {
    align-items: center;
    padding-top: 30rpx;
}

.cartype-title {
    font-size: 30rpx;
    color: #333;
}

.cartype-title view {
    display: inline-block;
    /*justify-content: center;
    align-items: center; */
    width: 34rpx;
    height: 34rpx;
    font-size: 24rpx;
    text-align: center;
    color: #c87434;
    border: 1rpx solid #c87434;
    border-radius: 4rpx;
}

.cartype-sub {
    font-size: 23rpx;
    color: #8f8f8f;
    margin-top: 30rpx;
}

.cartype-price {
    display: inline-block;
    font-size: 36rpx;
    color: #f2ac3d;
    margin-top: 40rpx;
}

.price-yuan {
    display: inline-block;
    font-size: 28rpx;
}

.price-sub {
    display: inline-block;
    color: #a2a2a2;
    font-size: 26rpx;
}